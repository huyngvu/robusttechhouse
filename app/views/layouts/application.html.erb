<!DOCTYPE html>
<html>
<head>
  <title>Robusttechhouse</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-narrow">
  <div class="masthead">
    <%= render 'layouts/user_header' %>
    <h3 class="muted"><%= link_to "Robusttechhouse", root_path %></h3>
    <% if user_signed_in? %>
  	<%= link_to t('.index', :default => t("helpers.links.posts")),
            posts_path,
            :class => 'btn btn-primary' %>
  <% end %>
  </div>
  
  <hr />
  <%= yield %>
</div>

</body>
</html>
