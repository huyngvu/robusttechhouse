
<div class="page-header">
  <h1><%=t '.title', :default => @post.title %></h1>
  <p class="lead"><%= @post.content %></p>
</div>
<p class="lead">Comments:</p>
<dl class="dl-horizontal">
  <% if (@post.comments) %>
      <% @post.comments.each do |comment| %>
          <dt><strong><%= comment.comment %></strong></dt>
      <% end %>
    
  <% end %>


  <br />
  <br />
  <br />
  <br />
  <% if user_signed_in? %>
    <%= form_tag("/post_comment/", method: "post") do %>
      <%= hidden_field_tag :post_id, @post.id %>
      <%= label_tag(:txtComment, "Post comment:") %>
      <%= text_field_tag(:txtComment) %>
      <%= submit_tag("Post") %>
    <% end %>

  <% end %>
</dl>
<p class="lead"><%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn btn-default'  %></p>